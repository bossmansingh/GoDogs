<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enter_new_password_textView"
        android:layout_gravity="center"
        android:hint="Enter new password"
        android:textColorHint="@android:color/background_light"
        android:textColor="@android:color/background_light"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_new_password_textView"
        android:layout_gravity="center"
        android:hint="Confirm password"
        android:textColorHint="@android:color/background_light"
        android:textColor="@android:color/background_light"
        android:inputType="textPassword" />
</LinearLayout><!-- From: file:/Users/Saurabh/Documents/Android_Projects/GoDogs/app/src/main/res/layout/dialog_reset_password.xml -->